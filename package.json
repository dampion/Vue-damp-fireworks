{
  "name": "vue-damp-fireworks",
  "version": "1.1.0",
  "main": "dist/vue-damp-fireworks.common.js",
  "description": "A Vue based fireworks component",
  "author": "dampion <evanchen79@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dampion/Vue-fireworks.git"
  },
  "files": [
    "dist/*",
    "src/*",
    "public/*"
  ],
  "keywords": [
    "firework",
    "煙火",
    "烟花",
    "烟火",
    "爆竹"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:npm": "vue-cli-service build --target lib ./src/components/index.js",
    "build:doc": "vue-cli-service build ./src/main.js --dest docs --mode development",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.3.5",
    "@vue/cli-plugin-eslint": "^3.3.5",
    "@vue/cli-service": "^3.3.5",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
